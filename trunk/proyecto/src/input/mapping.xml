<?xml version="1.0"?>

<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
                         "http://castor.org/mapping.dtd">

<mapping>

  <class name="input.Project">

    <map-to xml="project"/>

    <field name="Name"
           type="java.lang.String">
      <bind-xml name="name" node="attribute"/>
    </field>

    <field name="useCases"
           type="entities.UseCase"
              collection="arraylist">
      <bind-xml name="use-case"/>
    </field>
    
    <field name="earlyAspects"
           type="entities.EarlyAspect"
              collection="arraylist">
      <bind-xml name="early-aspect"/>
    </field>
  
	<field name="relations"
           type="entities.Relation"
              collection="arraylist">
      <bind-xml name="relation"/>
   </field>

  </class>

  <class name="entities.UseCase">
    <field name="name"
           type="java.lang.String">
      <bind-xml name="name" node="element"/>
    </field>
    <field name="id"
           type="java.lang.Integer">
      <bind-xml name="id" node="element"/>
    </field>
    <field name="description"
           type="java.lang.String">
      <bind-xml name="description" node="element"/>
    </field>
    <field name="actor"
           type="java.lang.String">
      <bind-xml name="actor" node="element"/>
    </field>
    <field name="priority"
           type="java.lang.String">
      <bind-xml name="priority" node="element"/>
    </field>
    <field name="trigger"
           type="java.lang.String">
      <bind-xml name="trigger" node="element"/>
    </field>
    
    <field name="basicFlow"
           type="java.lang.String" collection="arraylist">
            <bind-xml name="flow" location="basic-flow"/>
    </field>
    <field name="alternativeFlow"
           type="java.lang.String" collection="arraylist">
            <bind-xml name="flow" location="alternative-flow"/>
    </field>
    <field name="specialRequirement"
           type="java.lang.String" collection="arraylist">
            <bind-xml name="req" location="especial-reqs"/>
    </field>
    <field name="preconditions"
           type="java.lang.String" collection="arraylist">
            <bind-xml name="condition" location="preconditions"/>
    </field>
    <field name="postconditions"
           type="java.lang.String" collection="arraylist">
            <bind-xml name="condition" location="postconditions"/>
    </field>
   </class>

	<class name="entities.EarlyAspect">
  	 <field name="pairs"
           type="entities.EarlyAspectPair"
              collection="arraylist">
      <bind-xml name="pair" location="pairs"/>
    </field>
 
    <field name="name" type="java.lang.String">
      <bind-xml name="name" node="element"/>
    </field>

    <field name="id" type="java.lang.Integer">
      <bind-xml name="id" node="element"/>
    </field>
   
  
   </class>
   
    <class name="entities.EarlyAspectPair">
    
    <field name="verb" type="java.lang.String">
      <bind-xml name="verb" node="element"/>
    </field>
    <field name="object" type="java.lang.String">
      <bind-xml name="object" node="element"/>
    </field>
   </class>

	<class name="entities.Relation">
 
    <field name="earlyAspectId" type="java.lang.Integer">
      <bind-xml name="early-aspect" node="element"/>
    </field>
     <field name="useCaseIds"
           type="java.lang.Integer"
              collection="arraylist">
      <bind-xml name="id" location="use-cases"/>
    </field>
 
   </class>


</mapping>